/* The main panel window menu. */

menu(MainMenu, "Launcher") {
	item("Info") {
		d_box(ProgInfo);
	}
	item("Help...") {
		dotted;
	}
	item("Button") {
		submenu(button_menu);
	}
	item("New button...") {
		dotted;
	}
	item("Panel") {
		submenu(PanelMenu);
	}
	item("New panel...") {
		dotted;
	}
	item("Save layout");
	item("Choices...") {
		dotted;
	}
	item("Quit");
}


menu(button_menu, "Button")
{
	item("Edit...");
	item("Delete");
}

menu(PanelMenu, "Panel")
{
	item("Edit...");
	item("Delete");
}

/* The panel location menu. */

menu(PanelLocationMenu, "Location")
{
	item("Left");
	item("Right");
	item("Top");
	item("Bottom");
}